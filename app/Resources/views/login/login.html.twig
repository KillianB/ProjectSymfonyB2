{% extends 'base.html.twig' %}

{% block stylesheets%}
    <style>
        body {
            background-image: url("{{ asset('images/backgroundLogin.png') }}");
            background-size: 100vw 100vh;
            width: 100vw;
            height: 100vh;
        }
    </style>
{% endblock %}

{% block body %}
    <main>
        <div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
            <div class="valign" style="width:100%;">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m6 offset-m3">
                            <div class="card z-depth-4">
                                {{ form_start(form) }}
                                    <div class="card-content">
                                        <span class="card-title black-text">Se connecter</span>

                                            <div class="row">
                                                <div class="input-field col s12">
                                                    {{ form_row(form.Email) }}
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="input-field col s12">
                                                    {{ form_row(form.password) }}
                                                </div>
                                            </div>

                                    </div>
                                    <div class="card-action">
                                        <input type="submit" class="btn" value="Se connecter">
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block js %}
    {% if reason == "wrong" %}
        <script>Materialize.toast("Le mot de passe ou le nom d'utilisateur est incorrect", 2000)</script>
    {% endif %}
{% endblock %}