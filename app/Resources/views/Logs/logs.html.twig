{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        body {
            overflow: auto !important;
        }
        .collection-item {
            transition: ease-out .2s !important;
        }
        .collection-item:hover {
            background-color: #b2dfdb !important;
        }
        .collection-item selected {
            background-color: #b2dfdb;
        }
    </style>
{% endblock %}

{% block body %}
    <blockquote>Liste des fichiers de log :</blockquote>
    <p></p>
    <div class="collection">
        {% for file in finder %}
            <div class="collection-item">
                <a href="/listeLog/{{ file.getRelativePathname }}" style="display: block; width: 100%; height: 100%; text-transform: uppercase; padding: 10px 0; margin: -10px 0;">{{ file.getRelativePathname }}</a> <a href="/listeLog/empty/{{ file.getRelativePathname }}" class="waves-effect waves-light btn red right" style="margin-top:-30px">Vider le contenu</a>
            </div>
        {% endfor %}
    </div>
    <p></p>

    {% if content is defined %}
        <blockquote>Fichier <span style="color: red; font-weight: bold">{{ file.getRelativePathname }}</span> :</blockquote>
        <div class="row">
            <div class="col s12">
                <div class="card  z-depth-4 teal lighten-5">
                    <div class="card-content">
                        {% for line in content %}
                            <p>{{ line }}</p></br>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}