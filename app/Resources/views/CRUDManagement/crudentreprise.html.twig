{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
            <div class="valign" style="width:100%;">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m8 offset-m2">
                            <div class="card z-depth-5">
                                {{ form_start(form) }}
                                <div class="card-content">
                                    {% if entreprise is defined %}
                                        <span class="card-title black-text">Modifier une entreprise</span>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.nom, {'value': entreprise.getNomEntreprise }) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s4">
                                                {{ form_row(form.numero_rue, {'value': entreprise.getNumeroEntreprise }) }}
                                            </div>
                                            <div class="input-field col s4">
                                                {{ form_row(form.voie, {'value': entreprise.getVoieEntreprise }) }}
                                            </div>
                                            <div class="input-field col s4">
                                                {{ form_row(form.ville, {'value': entreprise.getVilleEntreprise }) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s6">
                                                {{ form_row(form.code_postal, {'value': entreprise.getCpEntreprise }) }}
                                            </div>
                                            <div class="input-field col s6">
                                                {{ form_row(form.pays, {'value': entreprise.getPaysEntreprise }) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.siret, {'value': entreprise.getSiretEntreprise }) }}
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="card-title black-text">Ajouter une entreprise</span>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.nom) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s4">
                                                {{ form_row(form.numero_rue) }}
                                            </div>
                                            <div class="input-field col s4">
                                                {{ form_row(form.voie) }}
                                            </div>
                                            <div class="input-field col s4">
                                                {{ form_row(form.ville) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s6">
                                                {{ form_row(form.code_postal) }}
                                            </div>
                                            <div class="input-field col s6">
                                                {{ form_row(form.pays) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.siret) }}
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card-action">
                                    <a class="btn" href="/listeEntreprise">Retour</a>
                                    <input type="submit" class="btn" value="Valider">
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}