{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
            <div class="valign" style="width:100%;">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m8 offset-m2">
                            <div class="card z-depth-5">
                                {{ form_start(form) }}
                                <div class="card-content">
                                    {% if projet is defined %}
                                        <span class="card-title black-text">Modifier un projet</span>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.nom, {'value': projet.getNomProjet }) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.salle, {'value': projet.getSalleProjet }) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s4">
                                                {{ form_row(form.ext_int, {'value': projet.getProjetExtIntProjet }) }}
                                            </div>
                                            <div class="input-field col s4">
                                                {{ form_row(form.ydays_perso_pro, {'value': projet.getYdaysPersoProProjet }) }}
                                            </div>
                                            <div class="input-field col s4">
                                                {{ form_row(form.helper, {'value': projet.getIdHelperProjet }) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s6">
                                                {{ form_row(form.evaluation, {'value': projet.getIdEvaluation }) }}
                                            </div>
                                            <div class="input-field col s6">
                                                {{ form_row(form.entreprise, {'value': projet.getIdEntreprise }) }}
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="card-title black-text">Ajouter un projet</span>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.nom) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.salle) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s4">
                                                {{ form_row(form.ext_int) }}
                                            </div>
                                            <div class="input-field col s4">
                                                {{ form_row(form.ydays_perso_pro) }}
                                            </div>
                                            <div class="input-field col s4">
                                                {{ form_row(form.helper) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s6">
                                                {{ form_row(form.evaluation) }}
                                            </div>
                                            <div class="input-field col s6">
                                                {{ form_row(form.entreprise) }}
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card-action">
                                    <a class="btn" href="/listeProjet">Retour</a>
                                    <input type="submit" class="btn" value="Valider">
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block js %}
    <script>
        $(document).ready(function () {
            $('select').material_select();

            var select = document.getElementsByTagName('SELECT');
            var newElement = [
                document.createElement('label'),
                document.createElement('label'),
                document.createElement('label'),
                document.createElement('label'),
                document.createElement('label')
            ];

            newElement[0].innerHTML = 'Port√©e du projet';
            newElement[1].innerHTML = 'Type YDays';
            newElement[2].innerHTML = 'Helper';
            newElement[3].innerHTML = 'Evaluation';
            newElement[4].innerHTML = 'Entreprise';

            for(var i = 0; i < newElement.length; i++) {
                select[i].parentNode.parentNode.appendChild(newElement[i]);
            }

            $('.select-wrapper').prev().remove();
        })
    </script>
{% endblock %}