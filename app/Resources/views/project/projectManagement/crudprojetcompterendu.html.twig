{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        textarea {
            max-height: 400px !important;
            overflow: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <main>
        <div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
            <div class="valign" style="width:100%;">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m8 offset-m2">
                            <div class="card z-depth-5">
                                {{ form_start(form) }}
                                <div class="card-content">
                                    {% if compteRendu is defined %}
                                        <span class="card-title black-text">Modifier un compte-rendu</span>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.titre, {'value': compteRendu.getTitreCompteRendu}) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.contenu, {'value': compteRendu.getContenuCompteRendu }) }}
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="card-title black-text">Ajouter un compte-rendu</span>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.titre) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                {{ form_row(form.contenu) }}
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card-action">
                                    <a class="btn" href="/projet/{{ idProjet }}">Retour</a>
                                    <input type="submit" class="btn" value="Valider">
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block js %}
    <script>
        $(document).ready(function () {
            document.getElementsByTagName('TEXTAREA')[0].setAttribute("class", "materialize-textarea");
            console.log(document.getElementsByTagName('TEXTAREA')[0]);
        })
    </script>
{% endblock %}